<div class="flex min-h-screen flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
    <img class="mx-auto h-24 w-auto lg:h-28" src="/src/img/logoContagramm.svg" alt="Your Company" />
    <h2 class="mt-6 text-xl font-bold tracking-tight text-gray-900 sm:text-2xl lg:text-3xl">
      VERIFICADOR DE EMPLEADO
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <form id="employeeForm" class="space-y-6 px-4 sm:px-0">
      <div class="flex flex-col items-center">
        <label for="name" class="block text-sm font-bold text-gray-900 text-center sm:text-base lg:text-lg">
          Nombre o N° Colaborador
        </label>
        <div class="mt-2 w-full flex flex-col items-center">
          <input
            id="name"
            name="nameEmp"
            type="text"
            autocomplete="text"
            required
            class="block w-full sm:w-4/5 md:w-3/4 lg:w-2/3 xl:w-1/2 rounded-md border-0 py-2 text-gray-900 text-center shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm lg:text-base"
          />
          <span id="error-message" class="text-red-500 text-xs sm:text-sm mt-1 hidden">Por favor, complete este campo.</span>
          <span id="result-message" class="text-green-500 text-xs sm:text-sm mt-1 hidden"></span>
        </div>
      </div>
      <div class="flex justify-center">
        <button
          type="button"
          id="verifyButton"
          class="w-full sm:w-1/3 rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
        >
          Verificar
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/src/components/TS/checkEmp.js"></script>

<!-- Modal -->
<div id="modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!-- Fondo oscuro -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

  <!-- Modal -->
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        
        <!-- Encabezado del modal (dinámico) -->
        <div id="modal-header" class="bg-green-100 px-4 pb-4 pt-5 sm:p-6 sm:pb-4 rounded-t-lg">
          <div class="sm:flex sm:items-center sm:justify-start"> <!-- Cambiar a 'sm:justify-start' para alinear a la izquierda -->
            <div class="mx-auto sm:mx-0 flex h-12 w-12 shrink-0 items-center justify-center rounded-full" id="modal-icon-container">
              <!-- Palomita o X dependiendo del estado -->
              <svg id="modal-icon" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path id="modal-icon-path" stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div class="mt-3 text-left sm:ml-4 sm:mt-0"> <!-- Cambiar a 'text-left' para alinear el texto a la izquierda -->
              <h3 id="modal-title" class="text-lg font-semibold text-gray-900">¡Colaborador Activo!</h3>
              <p class="mt-1 text-sm text-gray-600">A continuación, los detalles del colaborador:</p>
            </div>
          </div>
        </div>

        <!-- Contenido del modal -->
        <div class="bg-white px-4 py-5 sm:px-6">
          <div class="space-y-4">
            <p class="text-sm text-gray-500">Nombre: <span id="modal-name" class="font-semibold text-gray-900"></span></p>
            <p class="text-sm text-gray-500">Número de Colaborador: <span id="modal-collaborator-number" class="font-semibold text-gray-900"></span></p>
            <p class="text-sm text-gray-500">Puesto: <span id="modal-position" class="font-semibold text-gray-900"></span></p>
            <p class="text-sm text-gray-500">Estado: <span id="modal-status" class="font-semibold text-gray-900"></span></p>
          </div>
        </div>

        <!-- Botón para cerrar -->
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button type="button" onclick="closeModal()" class="inline-flex w-full justify-center rounded-md bg-blue-400 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-600 sm:ml-3 sm:w-auto">
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
